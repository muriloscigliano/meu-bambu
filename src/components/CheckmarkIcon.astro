---
/**
 * Reusable checkmark icon component
 * Used across product features, benefits, and trust indicators
 */
interface Props {
	width?: string;
	height?: string;
	class?: string;
}

const {
	width = '18',
	height = '18',
	class: className = ''
} = Astro.props;
---

<svg
	class={`checkmark-icon ${className}`}
	width={width}
	height={height}
	viewBox="0 0 18 18"
	fill="none"
	xmlns="http://www.w3.org/2000/svg"
	aria-hidden="true"
>
	<circle
		cx="9"
		cy="9"
		r="8"
		stroke="currentColor"
		stroke-width="1.5"
	/>
	<path
		d="M6 9L8 11L12 7"
		stroke="currentColor"
		stroke-width="1.5"
		stroke-linecap="round"
		stroke-linejoin="round"
	/>
</svg>

<style>
	.checkmark-icon {
		flex-shrink: 0;
		color: currentColor;
	}
</style>
