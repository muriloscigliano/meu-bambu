---
interface Props {
	name: 'checkmark' | 'arrow';
	size?: number;
	class?: string;
}

const { name, size = 24, class: className = '' } = Astro.props as Props;

const icons = {
	checkmark: {
		viewBox: '0 0 18 18',
		path: `<circle cx="9" cy="9" r="8" stroke="currentColor" stroke-width="1.5"/>
			<path d="M6 9L8 11L12 7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>`
	},
	arrow: {
		viewBox: '0 0 24 24',
		path: `<path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`
	}
};

const icon = icons[name];
---

<svg
	width={size}
	height={size}
	viewBox={icon.viewBox}
	fill="none"
	xmlns="http://www.w3.org/2000/svg"
	class={className}
	aria-hidden="true"
	set:html={icon.path}
/>
