---
import Button from '../Button.astro';

interface Props {
	title: string;
	ctaLabel: string;
	ctaHref: string;
	description: string;
	cnpj: string;
	address: {
		street: string;
		city: string;
		zipCode: string;
	};
}

const { title, ctaLabel, ctaHref, description, cnpj, address } = Astro.props as Props;
---

<div data-footer-parallax class="footer__wrap" data-section>
	<footer data-footer-parallax-inner class="footer" aria-labelledby="footer-title">
		<div class="footer-cta__content">
			<div class="footer-cta__left">
				<h2 id="footer-title" class="footer-cta__title" data-split="heading">{title}</h2>
				<div data-animate="fade-in" data-delay="0.3">
					<Button text={ctaLabel} href={ctaHref} theme="primary" class="footer-cta__button" />
				</div>
			</div>

			<figure class="footer-cta__center">
				<div class="footer-cta__logo" data-animate="logo-spin">
					<img src="/images/flowing-boards-badge.jpg" alt="Flowing Boards - Marca especialista em produtos de bambu premium" />
				</div>
			</figure>

			<address class="footer-cta__right" data-animate="stagger">
				<p class="footer-cta__text" data-stagger-item>{description}</p>
				<div class="footer-cta__divider" role="separator" data-stagger-item aria-hidden="true"></div>
				<p class="footer-cta__info" data-stagger-item>{cnpj}</p>
				<div class="footer-cta__divider" role="separator" data-stagger-item aria-hidden="true"></div>
				<p class="footer-cta__info" data-stagger-item>
					{address.street}<br>
					{address.city}<br>
					{address.zipCode}
				</p>
			</address>
		</div>
	</footer>
	<div data-footer-parallax-dark class="footer__dark" aria-hidden="true"></div>
  </div>

<style>
.footer__wrap {
	position: relative;
	overflow: hidden;
	background: var(--color-bg-dark);

}

.footer__dark {
	opacity: 0;
	pointer-events: none;
	background-color: var(--color-bg-dark);
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
}

.footer { 
	position: relative; 
	isolation: isolate; 
	min-height: var(--section-min-height);
	background: var(--color-bg-dark);
	border-top: 1px solid rgba(255, 255, 255, 0.1);
	border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	padding-block: 90px;
	display: flex;
	align-items: center;
	justify-content: center;
}

.footer-cta__content {
	max-width: var(--container-max);
	width: 100%;
	margin-inline: auto;
	padding-inline: 2.25rem;
	display: grid;
	grid-template-columns: 1fr auto 1fr;
	gap: 48px;
	align-items: center;
	position: relative;
}

.footer-cta__left {
	display: flex;
	flex-direction: column;
	gap: 36px;
	align-items: flex-start;
}

.footer-cta__title { 
	font-family: var(--font-display); 
	font-weight: 900;
	text-transform: uppercase; 
	line-height: 1;
	font-size: 64px;
	color: var(--color-white);
	margin: 0;
}

.footer-cta__button {
	height: 56px;
}

.footer-cta__center {
	display: flex;
	align-items: center;
	justify-content: center;
	padding-top: 120px;
}

.footer-cta__logo {
	width: 201px;
	height: 201px;
	overflow: hidden;
	border-radius: 100%;
}
.footer-cta__logo img {
	width: 100%;
	height: 100%;
	object-fit: cover;
	border-radius: 100%;
}

/* Initial state for logo spin animation */
[data-animate="logo-spin"] {
	opacity: 0;
	transform: rotate(-180deg) scale(0.8);
}

.footer-cta__right {
	display: flex;
	flex-direction: column;
	gap: 36px;
	padding-left: 48px;
	max-height: 330px;
	justify-content: center;
}

.footer-cta__text {
	font-family: var(--font-sans);
	font-weight: 400;
	font-size: 16px;
	line-height: 1.4;
	color: var(--color-text-light);
	margin: 0;
}

.footer-cta__divider {
	height: 1px;
	background: rgba(238, 232, 219, 0.2);
	width: 100%;
}

.footer-cta__info {
	font-family: var(--font-display);
	font-weight: 400;
	font-size: 18px;
	line-height: 1.2;
	text-transform: uppercase;
	color: var(--color-text-light);
	margin: 0;
}

@media (max-width: 1200px) {
	.footer-cta__content {
		grid-template-columns: 1fr;
		gap: 60px;
	}
	
	.footer-cta__center {
		order: 3;
		padding-top: 0;
	}
	
	.footer-cta__right {
		padding-left: 0;
		max-height: none;
	}
}

@media (max-width: 768px) {
	.footer-cta__title {
		font-size: 48px;
	}
	
	.footer-cta__logo {
		width: 150px;
		height: 150px;
	}
}

[data-underline-link] {
  text-decoration: none;
  position: relative;
}

[data-underline-link]::before {
  content: "";
  position: absolute;
  bottom: -0.0625em;
  left: 0;
  width: 100%;
  height: 0.1em;
  background-color: var(--color-accent);
  transition: transform 0.735s cubic-bezier(0.625, 0.05, 0, 1);
  transform-origin: right;
  transform: scaleX(0) rotate(0.001deg);
}

@media (hover: hover) and (pointer: fine) {
  [data-hover]:hover [data-underline-link]::before,
  [data-underline-link]:hover::before {
    transform-origin: left;
    transform: scaleX(1) rotate(0.001deg);
  }  
}
</style>

<script>
import { gsap, ScrollTrigger } from '../../utils/gsap.ts';

gsap.registerPlugin(ScrollTrigger);

	function initFooterParallax(){
	  document.querySelectorAll('[data-footer-parallax]').forEach(el => {
		const tl = gsap.timeline({
		  scrollTrigger: {
			trigger: el,
			start: 'clamp(top bottom)',
			end: 'clamp(top top)',
			scrub: true
		  }
		});

		const inner = el.querySelector('[data-footer-parallax-inner]');
		const dark  = el.querySelector('[data-footer-parallax-dark]');

		if (inner) {
		  tl.from(inner, {
			yPercent: -75,
			scale: 0.95,
			ease: 'linear'
		  });
		}

		if (dark) {
		  tl.from(dark, {
			opacity: 1,
			ease: 'linear'
		  }, '<');
		}
	  });
	}

	function initLogoSpinAnimation() {
	  const logos = document.querySelectorAll('[data-animate="logo-spin"]');

	  logos.forEach((logo) => {
		ScrollTrigger.create({
		  trigger: logo,
		  start: 'top 85%',
		  once: true,
		  onEnter: () => {
			gsap.to(logo, {
			  opacity: 1,
			  rotation: 0,
			  scale: 1,
			  duration: 1.2,
			  ease: 'back.out(1.4)'
			});
		  }
		});
	  });
	}

	// Initialize Footer with Parallax Effect
	document.addEventListener('DOMContentLoaded', () => {
	  initFooterParallax();
	  initLogoSpinAnimation();
	});
</script>