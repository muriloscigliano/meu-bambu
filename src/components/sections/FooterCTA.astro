---
import Button from '../Button.astro';

interface Props {
	title: string;
	ctaLabel: string;
	ctaHref: string;
	description: string;
	cnpj: string;
	address: {
		street: string;
		city: string;
		zipCode: string;
	};
}

const { title, ctaLabel, ctaHref, description, cnpj, address } = Astro.props as Props;
---

<div data-footer-parallax class="footer-wrap">
	<section data-footer-parallax-inner class="footer-cta">
		<div class="footer-cta__container">
			<div class="footer-cta__content">
				<div class="footer-cta__left" data-reveal>
					<h2 class="footer-cta__title">{title}</h2>
					<Button text={ctaLabel} href={ctaHref} theme="primary" />
				</div>

				<div class="footer-cta__center">
					<div class="footer-cta__logo">
						<svg width="201" height="201" viewBox="0 0 201 201" fill="none" xmlns="http://www.w3.org/2000/svg">
							<!-- Logo placeholder - Flowing Boards circular logo -->
							<circle cx="100.5" cy="100.5" r="99.5" stroke="#eee8db" stroke-width="2"/>
							<text x="100.5" y="110" text-anchor="middle" font-family="Rumiko Sans" font-size="16" font-weight="500" fill="#eee8db">MAKING</text>
							<text x="100.5" y="130" text-anchor="middle" font-family="Rumiko Sans" font-size="16" font-weight="500" fill="#eee8db">BETTER LIFE</text>
						</svg>
					</div>
				</div>

				<div class="footer-cta__right" data-reveal>
					<p class="footer-cta__text">{description}</p>
					<div class="footer-cta__divider"></div>
					<p class="footer-cta__info">{cnpj}</p>
					<div class="footer-cta__divider"></div>
					<p class="footer-cta__info">
						{address.street}<br>
						{address.city}<br>
						{address.zipCode}
					</p>
				</div>
			</div>
		</div>
	</section>
	<div data-footer-parallax-dark class="footer-wrap__dark"></div>
</div>

<style>
.footer-wrap {
	position: relative;
	overflow: hidden;
}

.footer-wrap__dark {
	opacity: 0;
	pointer-events: none;
	background-color: var(--color-bg-dark);
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
}

.footer-cta { 
	position: relative; 
	isolation: isolate; 
	min-height: var(--section-min-height);
	display: flex;
	align-items: center;
	background: var(--color-bg-dark);
	border-top: 1px solid rgba(255, 255, 255, 0.1);
	border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	padding-block: 90px;
}

.footer-cta::before,
.footer-cta::after {
	background: rgba(255, 255, 255, 0.1);
}

.footer-cta__container { 
	max-width: var(--container-max); 
	margin-inline: auto;
	width: 100%;
	padding-inline: 2.25rem;
}

.footer-cta__content {
	display: grid;
	grid-template-columns: 1fr auto 1fr;
	gap: 48px;
	align-items: center;
	position: relative;
}

.footer-cta__left {
	display: flex;
	flex-direction: column;
	gap: 36px;
	align-items: flex-start;
}

.footer-cta__title { 
	font-family: var(--font-display); 
	font-weight: 900;
	text-transform: uppercase; 
	line-height: 1;
	font-size: 64px;
	color: var(--color-white);
	margin: 0;
}

.footer-cta__button {
	height: 56px;
}

.footer-cta__center {
	display: flex;
	align-items: center;
	justify-content: center;
	padding-top: 120px;
}

.footer-cta__logo {
	width: 201px;
	height: 201px;
}

.footer-cta__right {
	display: flex;
	flex-direction: column;
	gap: 36px;
	padding-left: 48px;
	max-height: 330px;
	justify-content: center;
}

.footer-cta__text {
	font-family: var(--font-sans);
	font-weight: 400;
	font-size: 16px;
	line-height: 1.4;
	color: var(--color-text-light);
	margin: 0;
}

.footer-cta__divider {
	height: 1px;
	background: rgba(238, 232, 219, 0.2);
	width: 100%;
}

.footer-cta__info {
	font-family: var(--font-display);
	font-weight: 400;
	font-size: 18px;
	line-height: 1.2;
	text-transform: uppercase;
	color: var(--color-text-light);
	margin: 0;
}

@media (max-width: 1200px) {
	.footer-cta__content {
		grid-template-columns: 1fr;
		gap: 60px;
	}
	
	.footer-cta__center {
		order: 3;
		padding-top: 0;
	}
	
	.footer-cta__right {
		padding-left: 0;
		max-height: none;
	}
}

@media (max-width: 768px) {
	.footer-cta__title {
		font-size: 48px;
	}
	
	.footer-cta__logo {
		width: 150px;
		height: 150px;
	}
}
</style>

<script>
import gsap from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';

gsap.registerPlugin(ScrollTrigger);

function initFooterParallax() {
	document.querySelectorAll('[data-footer-parallax]').forEach((el) => {
		const tl = gsap.timeline({
			scrollTrigger: {
				trigger: el,
				start: 'clamp(top bottom)',
				end: 'clamp(top top)',
				scrub: true
			}
		});

		const inner = el.querySelector('[data-footer-parallax-inner]');
		const dark = el.querySelector('[data-footer-parallax-dark]');

		if (inner) {
			tl.from(inner, {
				yPercent: -25,
				ease: 'linear'
			});
		}

		if (dark) {
			tl.from(dark, {
				opacity: 0.5,
				ease: 'linear'
			}, '<');
		}
	});
}

// Initialize Footer with Parallax Effect
if (document.readyState === 'loading') {
	document.addEventListener('DOMContentLoaded', initFooterParallax);
} else {
	initFooterParallax();
}

// Re-initialize on view transitions (for Astro)
document.addEventListener('astro:after-swap', initFooterParallax);
</script>
