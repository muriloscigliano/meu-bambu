---
import Button from '../Button.astro';

interface Props {
	eyebrow: string;
	title: string;
	description: string;
	ctaLabel: string;
	ctaHref: string;
	useCases: string[];
}

const { eyebrow, title, description, ctaLabel, ctaHref, useCases } = Astro.props as Props;
---

<section class="perfect-for" data-trail="wrapper" data-section aria-labelledby="perfect-for-title">
	<div class="perfect-for__container">
		<header class="perfect-for__header">
			<div class="perfect-for__line" data-animate="fade-in" aria-hidden="true"></div>
			<div class="perfect-for__header-content">
				<p class="perfect-for__eyebrow" data-animate="fade-in">{eyebrow}</p>
				<h2 id="perfect-for-title" class="perfect-for__title" data-split="heading">{title}</h2>
				<p class="perfect-for__desc" data-animate="fade-in">{description}</p>
				<div data-animate="fade-in">
					<Button text={ctaLabel} href={ctaHref} theme="dark" />
				</div>
			</div>
			<div class="perfect-for__line" data-animate="fade-in" aria-hidden="true"></div>
		</header>

		<ul class="perfect-for__icons" data-animate="stagger" aria-label="Casos de uso do produto">
			{useCases.map((useCase, index) => (
				<>
					<li class="perfect-for__icon-item" data-stagger-item>
						<div class="perfect-for__icon" aria-hidden="true">
							<svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
								<rect width="60" height="60" fill="#d28f3d" opacity="0.2"/>
							</svg>
						</div>
						<span class="perfect-for__icon-label" set:html={useCase.replace(' e ', '<br>e ')}></span>
					</li>
					{index < useCases.length - 1 && (index + 1) % 4 !== 0 && <li class="perfect-for__icon-divider" aria-hidden="true"></li>}
				</>
			))}
		</ul>
	</div>

	<!-- Image Trail Effect -->
	<div class="trail-wrap" aria-hidden="true">
		<div class="trail-list">
			<div data-trail="item" class="trail-item"><img src="/images/floresta-bambu.jpg" alt="" class="trail-item__img" loading="lazy"></div>
			<div data-trail="item" class="trail-item"><img src="/images/floresta-bambu.jpg" alt="" class="trail-item__img" loading="lazy"></div>
			<div data-trail="item" class="trail-item"><img src="/images/floresta-bambu.jpg" alt="" class="trail-item__img" loading="lazy"></div>
			<div data-trail="item" class="trail-item"><img src="/images/floresta-bambu.jpg" alt="" class="trail-item__img" loading="lazy"></div>
			<div data-trail="item" class="trail-item"><img src="/images/floresta-bambu.jpg" alt="" class="trail-item__img" loading="lazy"></div>
			<div data-trail="item" class="trail-item"><img src="/images/floresta-bambu.jpg" alt="" class="trail-item__img" loading="lazy"></div>
			<div data-trail="item" class="trail-item"><img src="/images/floresta-bambu.jpg" alt="" class="trail-item__img" loading="lazy"></div>
			<div data-trail="item" class="trail-item"><img src="/images/floresta-bambu.jpg" alt="" class="trail-item__img" loading="lazy"></div>
		</div>
	</div>
</section>

<style>
.perfect-for { 
	position: relative; 
	isolation: isolate; 
	min-height: var(--section-min-height);
	display: flex;
	align-items: center;
	background: var(--color-bg-primary);
	border-top: 1px solid var(--color-line);
	border-bottom: 1px solid var(--color-line);
	padding-block: 80px;
	z-index: 99;
}

.perfect-for__container { 
	max-width: var(--container-max); 
	margin-inline: auto;
	width: 100%;
	padding-inline: 2.25rem;
	padding-block: 16rem;
	display: flex;
	flex-direction: column;
    align-items: center;
	/* gap: 24px; */
}

.perfect-for__header {
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 0;
	margin-bottom: 48px;
}

.perfect-for__line {
	flex: 1;
	height: 1px;
	background: var(--color-border);
	max-width: 181px;
}

.perfect-for__header-content {
	max-width: 753px;
	text-align: center;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 29px;
	padding-block: 48px 12px;
}

.perfect-for__eyebrow { 
	font-family: var(--font-display);
	font-weight: 500;
	text-transform: uppercase; 
	font-size: 24px;
	color: var(--color-accent);
	margin: 0;
	line-height: normal;
}

.perfect-for__title { 
	font-family: var(--font-display); 
	font-weight: 900;
	font-style: italic;
	text-transform: uppercase; 
	line-height: 1.1;
	font-size: 64px;
	color: var(--color-text-secondary);
	margin: 0;
	text-align: center;
}

.perfect-for__desc {
	font-family: var(--font-sans);
	font-weight: 500;
	font-style: italic;
	font-size: 18px;
	line-height: normal;
	color: var(--color-text-primary);
	margin: 0;
	max-width: 516px;
	text-align: center;
}

.perfect-for__cta {
	height: 56px;
}

.perfect-for__icons {
	display: flex;
	align-items: flex-end;
	justify-content: center;
	flex-wrap: wrap;
	padding-inline: 36px;
	margin-bottom: 24px;
	gap: 36px;
	max-width: 1210px;
	list-style: none;
}

.perfect-for__icon-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 26px;
	flex: 0 0 auto;
}

.perfect-for__icon {
	width: 60px;
	height: 60px;
	display: flex;
	align-items: center;
	justify-content: center;
}

.perfect-for__icon-label {
	font-family: var(--font-display);
	font-weight: 700;
	font-style: italic;
	font-size: 16px;
	line-height: 1.1;
	text-transform: uppercase;
	color: var(--color-text-secondary);
	text-align: center;
	margin: 0;
	width: 140px;
}

.perfect-for__icon-divider {
	width: 89px;
	height: 0;
	border-top: 1px solid var(--color-border);
	align-self: center;
	transform: rotate(90deg);
}

.perfect-for__image {
	width: 100%;
	aspect-ratio: 1360 / 609;
	border-radius: 8px;
	overflow: hidden;
	background: var(--color-selected);
	padding-inline: 24px;
}

.perfect-for__image img {
	width: 100%;
	height: 100%;
	object-fit: cover;
	display: block;
}

@media (max-width: 1200px) {
	.perfect-for__icons {
		flex-wrap: wrap;
		justify-content: center;
		gap: 32px;
	}
	
	.perfect-for__icon-divider {
		display: none;
	}
}

@media (max-width: 768px) {
	.perfect-for__title {
		font-size: 48px;
	}
	
	.perfect-for__line {
		display: none;
	}
	
	.perfect-for__icons {
		padding-inline: 0;
	}
}

/* Image Trail Effect */
.trail-wrap {
	z-index: 1;
	width: 100%;
	height: 100%;
	position: absolute;
	inset: 0;
	pointer-events: none;
}

.trail-list {
	width: 100%;
	height: 100%;
	position: relative;
}

.trail-item {
	opacity: 0;
	border-radius: 12px;
	width: 350px;
	height: 450px;
	position: absolute;
	overflow: hidden;
	box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
	pointer-events: none;
}

.trail-item__img {
	object-fit: cover;
	width: 100%;
	height: 100%;
	display: block;
}

@media (max-width: 992px) {
	.trail-wrap {
		display: none;
	}
}
</style>
