---
import Button from './Button.astro';
import Icon from './Icon.astro';

interface Props {
	title: string;
	subtitle?: string;
	ctaHref?: string;
	ctaLabel?: string;
}

const { title, subtitle, ctaHref = '#comprar', ctaLabel = 'Comprar agora' } = Astro.props as Props;
---

<section class="hero" data-section data-hero aria-labelledby="hero-title">
	<div class="hero__bg-pattern" aria-hidden="true"></div>
	<div class="hero__container">
		<h1 id="hero-title" class="hero__title" data-split="heading">{title}</h1>
		{subtitle && <p class="hero__desc" data-split="heading">{subtitle}</p>}
		<div data-animate="fade-in" data-delay="0.6">
			<Button text={ctaLabel} href={ctaHref} theme="primary" />
		</div>

		<div class="hero__divider" role="separator" data-animate="fade-in" data-delay="0.8" aria-hidden="true"></div>

		<ul class="hero__pills" data-animate="stagger" data-delay="1" aria-label="Benefícios">
			<li class="pill" data-stagger-item>
				<Icon name="checkmark" size={18} class="checkmark-icon" aria-hidden="true" />
				<span>Entrega rápida</span>
			</li>
			<li class="pill-divider" aria-hidden="true"></li>
			<li class="pill" data-stagger-item>
				<Icon name="checkmark" size={18} class="checkmark-icon" aria-hidden="true" />
				<span>Pagamento seguro</span>
			</li>
			<li class="pill-divider" aria-hidden="true"></li>
			<li class="pill" data-stagger-item>
				<Icon name="checkmark" size={18} class="checkmark-icon" aria-hidden="true" />
				<span>Qualidade garantida</span>
			</li>
		</ul>
	</div>
</section>

<style>
.hero { 
	position: relative; 
	isolation: isolate; 
	min-height: var(--section-min-height);
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center; 
	padding-top: 99px;
	padding-bottom: 99px;
	background: var(--color-bg-primary);
	border-top: 1px solid var(--color-line);
	border-bottom: 1px solid var(--color-line);
	overflow: hidden;
}

.hero__bg-pattern {
	position: absolute;
	inset: 0;
	background-image: url("data:image/svg+xml,%3Csvg width='100%25' height='100%25' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3Cpattern id='bamboo-leaves' x='0' y='0' width='400' height='400' patternUnits='userSpaceOnUse'%3E%3Cg opacity='0.3'%3E%3Cellipse cx='100' cy='100' rx='80' ry='120' fill='none' stroke='%2362533e' stroke-width='0.5' transform='rotate(45 100 100)'/%3E%3Cellipse cx='300' cy='300' rx='100' ry='150' fill='none' stroke='%2362533e' stroke-width='0.5' transform='rotate(-30 300 300)'/%3E%3C/g%3E%3C/pattern%3E%3C/defs%3E%3Crect width='100%25' height='100%25' fill='url(%23bamboo-leaves)'/%3E%3C/svg%3E");
	opacity: 0.3;
	pointer-events: none;
}

.hero__container { 
	position: relative;
	max-width: 760px;
	margin-inline: auto; 
	padding-inline: 2.25rem;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 36px;
}

.hero__title { 
	font-family: var(--font-display); 
	font-weight: 900;
	font-style: italic;
	text-transform: uppercase; 
	line-height: 0.9;
	letter-spacing: -0.02em; 
	font-size: clamp(3.5rem, 8vw, 8rem);
	color: var(--color-text-secondary);
	margin: 0;
}

.hero__desc { 
	max-width: 632px;
	color: var(--color-text-primary);
	font-family: var(--font-sans);
	font-weight: 500;
	font-style: italic;
	font-size: 18px;
	line-height: 1.3;
	margin: 0;
}


.hero__pills {
	display: flex;
	gap: 24px;
	align-items: center;
	justify-content: center;
	flex-wrap: wrap;
	list-style: none;
	padding: 0;
	margin: 0;
}

.hero__pills .pill {
	background: var(--color-bg-primary);
	border-radius: 500px;
	padding: 8px 16px;
	font-family: var(--font-sans);
	font-weight: 500;
	font-size: 16px;
	line-height: 1.3;
	color: var(--color-button-dark);
	border: 1px solid var(--color-border-dark);
}

.pill-divider {
	width: 18px;
	height: 0;
	border-top: 1px solid var(--color-border-dark);
	transform: rotate(90deg);
}

.hero__divider {
	height: 1px;
	width: 100%;
	background: var(--color-border);
}

@media (max-width: 768px) {
	.hero {
		padding-top: 120px;
	}
	.hero__title {
		font-size: clamp(2rem, 10vw, 3.5rem);
	}
	.hero__desc {
		font-size: 16px;
	}
	.pill-divider {
		display: none;
	}
	.hero__pills {
		gap: 12px;
	}
}
</style>


