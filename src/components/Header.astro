---
import Button from './Button.astro';
---

<header class="topbar">
	<nav class="topbar__container" aria-label="Navegação principal">
		<a href="/" class="topbar__logo" aria-label="Meu Bambu - Página inicial">
			<svg width="191" height="75" viewBox="0 0 191 75" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
				<g>
					<text x="8" y="50" font-family="Rumiko Sans, sans-serif" font-size="32" font-weight="900" font-style="italic" fill="#62533e" text-transform="uppercase" letter-spacing="-0.02em">
						MEU
					</text>
					<text x="8" y="70" font-family="Rumiko Sans, sans-serif" font-size="20" font-weight="700" font-style="italic" fill="#D28F3D" text-transform="uppercase" letter-spacing="0.05em">
						BAMBU
					</text>
				</g>
			</svg>
		</a>
		<div class="topbar__actions">
			<a href="/minha-conta" class="topbar__account" aria-label="Minha Conta">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
					<path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
			</a>
			<Button text="COMPRAR" href="#comprar" theme="light" />
		</div>
	</nav>
</header>

<style>
.topbar {
}
.topbar__container {
	max-width: var(--container-max);
	margin-inline: auto;
	display: flex;
	align-items: flex-end;
	justify-content: space-between;
	padding-inline: 2.25rem;
	padding-bottom: 24px;
}
.topbar__logo {
	width: 191px;
	height: 75px;
	display: block;
}
.topbar__actions {
	display: flex;
	align-items: center;
	gap: 16px;
}
.topbar__account {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 44px;
	height: 44px;
	border-radius: 50%;
	color: var(--color-text-secondary);
	transition: all 0.2s ease;
}
.topbar__account:hover {
	background: rgba(98, 83, 62, 0.1);
	color: var(--color-accent);
}
</style>


