<header class="topbar">
	<div class="topbar__container">
		<a href="/" class="topbar__logo">
			<svg width="191" height="75" viewBox="0 0 191 75" fill="none" xmlns="http://www.w3.org/2000/svg">
				<!-- Logo will be added - placeholder for now -->
				<text x="10" y="50" font-family="Rumiko Sans" font-size="24" font-weight="900" fill="#62533e">MEU BAMBU</text>
			</svg>
		</a>
		<a href="#comprar" class="topbar__cta" data-hover-scale>COMPRAR</a>
	</div>
</header>

<style>
.topbar { 
	position: fixed; 
	inset-inline: 0; 
	top: 0; 
	z-index: 50; 
	background: rgba(238, 232, 219, 0.95); 
	backdrop-filter: blur(8px);
	border-bottom: 1px solid transparent;
}
.topbar__container { 
	max-width: var(--container-max); 
	margin-inline: auto; 
	height: 99px; 
	display: flex; 
	align-items: flex-end; 
	justify-content: space-between; 
	padding-inline: 2.25rem;
	padding-bottom: 24px;
}
.topbar__logo {
	width: 191px;
	height: 75px;
	display: block;
}
.topbar__cta { 
	display: inline-flex;
	align-items: center;
	justify-content: center;
	gap: 10px;
	padding: 16px 24px;
	background: var(--color-button-primary);
	color: var(--color-text-light);
	border-radius: var(--radius-full);
	font-family: var(--font-display);
	font-weight: 900;
	font-style: italic;
	text-transform: uppercase;
	font-size: 16px;
	text-decoration: none;
	transition: opacity .15s ease;
}
.topbar__cta:hover { opacity: .9; }
</style>


