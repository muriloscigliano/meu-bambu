---
import '../styles/global.css';
import 'lenis/dist/lenis.css';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
	noIndex?: boolean;
}

const {
	title = 'Meu Bambu — Painéis de Bambu Premium com Núcleo Vertical',
	description = 'Os únicos painéis de bambu no Brasil com núcleo vertical. Mais fortes, estáveis e duradouros. Ideal para móveis, marcenaria e design sustentável. Compre online com entrega para todo o Brasil.',
	image = '/images/floresta-bambu.jpg',
	canonical,
	noIndex = false,
} = Astro.props as Props;

const url = canonical ?? (typeof Astro.url !== 'undefined' ? Astro.url.toString() : undefined);
const siteUrl = 'https://meubambu.com.br';
---

<html lang="pt-BR" prefix="og: http://ogp.me/ns#">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="color-scheme" content="light dark" />
		<meta name="theme-color" content="#62533e" />
		<meta name="author" content="Meu Bambu - Flowing Boards" />
		<meta name="keywords" content="painéis de bambu, bambu núcleo vertical, painéis bambu brasil, lâminas bambu, móveis bambu, marcenaria bambu, bambu sustentável, painéis ecológicos" />
		<meta name="google-site-verification" content="h73wC68P8slHedlKe5KVWicRjU63ebDpU3P1gucKNq0" />
		{url && <link rel="canonical" href={url} />}
		{noIndex ? <meta name="robots" content="noindex,nofollow" /> : <meta name="robots" content="index,follow,max-image-preview:large,max-snippet:-1,max-video-preview:-1" />}

		<!-- Mobile App / PWA -->
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<meta name="apple-mobile-web-app-title" content="Meu Bambu" />
		<meta name="format-detection" content="telephone=no" />

		<!-- Favicon variants -->
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<!-- Preconnect to external domains for performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="dns-prefetch" href="https://va.vercel-scripts.com" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="pt_BR" />
		<meta property="og:site_name" content="Meu Bambu" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		{url && <meta property="og:url" content={url} />}
		<meta property="og:image" content={siteUrl + image} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content="Painéis de Bambu Premium Meu Bambu" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={siteUrl + image} />
		<meta name="twitter:image:alt" content="Painéis de Bambu Premium Meu Bambu" />

		<!-- Preload critical font for faster text rendering -->
		<link rel="preload" href="/fonts/Rumiko-Sans-Variable-Demo.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="stylesheet" href="/fonts/rumiko-sans.css" />

		<!-- JSON-LD Structured Data for SEO -->
		<script is:inline type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@graph": [
				{
					"@type": "WebSite",
					"@id": siteUrl + "/#website",
					"url": siteUrl,
					"name": "Meu Bambu",
					"description": "Painéis de bambu premium com núcleo vertical para móveis, marcenaria e design sustentável",
					"inLanguage": "pt-BR",
					"publisher": {
						"@id": siteUrl + "/#organization"
					}
				},
				{
					"@type": "Organization",
					"@id": siteUrl + "/#organization",
					"name": "Meu Bambu",
					"alternateName": "Flowing Boards",
					"url": siteUrl,
					"logo": {
						"@type": "ImageObject",
						"url": siteUrl + "/images/flowing-boards-badge.jpg"
					},
					"sameAs": [],
					"contactPoint": {
						"@type": "ContactPoint",
						"contactType": "Customer Service",
						"availableLanguage": "Portuguese"
					}
				},
				{
					"@type": "LocalBusiness",
					"@id": siteUrl + "/#localbusiness",
					"name": "Meu Bambu",
					"image": siteUrl + "/images/floresta-bambu.jpg",
					"description": "Fornecedor de painéis e lâminas de bambu premium com núcleo vertical",
					"address": {
						"@type": "PostalAddress",
						"streetAddress": "Rua joaquim antônio de lima, 454",
						"addressLocality": "Joanópolis",
						"addressRegion": "SP",
						"postalCode": "12980-000",
						"addressCountry": "BR"
					},
					"geo": {
						"@type": "GeoCoordinates",
						"latitude": -22.9289,
						"longitude": -46.2764
					},
					"url": siteUrl,
					"priceRange": "$$",
					"areaServed": {
						"@type": "Country",
						"name": "Brasil"
					}
				}
			]
		})} />

	</head>
	<body>
		<a href="#main-content" class="skip-link">Pular para o conteúdo principal</a>
		<main id="main-content">
			<slot />
		</main>

		<!-- Client init: GSAP + Lenis -->
		<script>
			import { initLenis, destroyLenis } from '../utils/lenis';
			import { initSplitTextReveal } from '../utils/splitText';
			import { initAnimations as initGsapAnimations, cleanupAnimations } from '../utils/animations';
			import { initImageTrail } from '../utils/imageTrail';
			import { initMarqueeScrollDirection } from '../utils/marquee';
			import { gsap } from 'gsap';
			import { ScrollTrigger } from 'gsap/ScrollTrigger';

			gsap.registerPlugin(ScrollTrigger);

			let cleanupFunctions: (() => void)[] = [];

			function initAllAnimations() {
				cleanupFunctions.forEach(cleanup => cleanup());
				cleanupFunctions = [];

				// Initialize smooth scroll
				initLenis();

				// Don't wait too long for fonts - use a timeout
				const fontTimeout = setTimeout(() => {
					runAnimations();
				}, 300);

				document.fonts.ready.then(() => {
					clearTimeout(fontTimeout);
					runAnimations();
				});

				function runAnimations() {
					// Prevent running twice
					if (document.documentElement.classList.contains('animations-ready')) return;

					// Mark animations as ready (removes CSS fallback)
					document.documentElement.classList.add('animations-ready');

					// Initialize SplitText animations
					const splitCleanup = initSplitTextReveal();
					if (splitCleanup) {
						cleanupFunctions.push(splitCleanup);
					}

					// Initialize GSAP scroll animations
					initGsapAnimations();
				}

				// Image trail (desktop only)
				const trailCleanup = initImageTrail({
					minWidth: 992,
					moveDistance: 15,
					stopDuration: 350,
					trailLength: 6
				});
				if (trailCleanup) {
					cleanupFunctions.push(trailCleanup);
				}

				// Marquee scroll direction
				initMarqueeScrollDirection();
			}

			function cleanup() {
				cleanupFunctions.forEach(fn => fn());
				cleanupFunctions = [];
				cleanupAnimations();
				destroyLenis();
				ScrollTrigger.killAll();
				document.documentElement.classList.remove('animations-ready');
			}

			if (typeof window !== 'undefined') {
				if (document.readyState === 'loading') {
					document.addEventListener('DOMContentLoaded', initAllAnimations);
				} else {
					initAllAnimations();
				}

				document.addEventListener('astro:before-preparation', cleanup);
				window.addEventListener('beforeunload', cleanup);
			}
		</script>

		<!-- Vercel Analytics -->
		<script>
			import { inject } from '@vercel/analytics';
			inject();
		</script>

		<!-- Vercel Speed Insights -->
		<SpeedInsights />

		<!-- Freely AI Sales Widget -->
		<script is:inline>
			window.FreelyConfig = {
				organizationId: '3501a39e-cdfa-4dfd-84e1-886c2e62f62a',
				apiKey: 'pk_live_meubambu_0d1e5105d16c9711433dbe07',

				// Branding (match site colors)
				primaryColor: '#d28f3d',
				backgroundColor: '#24261d',
				cardColor: '#2a2c23',
				textColor: '#fffefc',
				mutedColor: '#a0927a',
				borderColor: '#474637',

				// Language & Region
				language: 'pt-BR',
				currency: 'BRL',

				// Payment methods
				paymentMethods: ['pix', 'card'],
				maxInstallments: 12,

				// Position
				position: 'bottom-right',
			};
		</script>
		<script src="https://freely-backend.fly.dev/widget.js" async></script>
	</body>
</html>
