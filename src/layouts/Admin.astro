---
import '../styles/global.css';
import '../styles/dashboard.css';
import '../styles/admin.css';

interface Props {
	title?: string;
	activeTab?: 'dashboard' | 'pedidos' | 'produtos' | 'clientes' | 'configuracoes';
}

const {
	title = 'Admin | Meu Bambu',
	activeTab = 'dashboard'
} = Astro.props;

const navItems = [
	{ id: 'dashboard', label: 'Dashboard', href: '/admin', icon: 'dashboard' },
	{ id: 'pedidos', label: 'Pedidos', href: '/admin/pedidos', icon: 'orders' },
	{ id: 'produtos', label: 'Produtos', href: '/admin/produtos', icon: 'products' },
	{ id: 'clientes', label: 'Clientes', href: '/admin/clientes', icon: 'customers' },
	{ id: 'configuracoes', label: 'Configurações', href: '/admin/configuracoes', icon: 'settings' },
];
---

<html lang="pt-BR">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="robots" content="noindex,nofollow" />
		<title>{title}</title>
		<link rel="stylesheet" href="/fonts/rumiko-sans.css" />
	</head>
	<body class="dashboard-body admin-body">
		<div class="dashboard admin-dashboard">
			<!-- Sidebar -->
			<aside class="dashboard__sidebar admin__sidebar">
				<a href="/admin" class="dashboard__logo">
					<svg fill="none" viewBox="0 0 191 75" xmlns="http://www.w3.org/2000/svg" height="50" width="130">
						<text fill="#62533e" font-family="Rumiko Sans, sans-serif" font-size="32" font-style="italic" font-weight="900" x="8" y="50">MEU</text>
						<text fill="#D28F3D" font-family="Rumiko Sans, sans-serif" font-size="20" font-style="italic" font-weight="700" x="8" y="70">BAMBU</text>
					</svg>
					<span class="admin-badge">ADMIN</span>
				</a>

				<nav class="dashboard__nav">
					{navItems.map(item => (
						<a
							href={item.href}
							class={`dashboard__nav-item ${activeTab === item.id ? 'dashboard__nav-item--active' : ''}`}
						>
							{item.icon === 'dashboard' && (
								<svg class="dashboard__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
									<path d="M4 5a1 1 0 011-1h4a1 1 0 011 1v5a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-3zM14 13a1 1 0 011-1h4a1 1 0 011 1v6a1 1 0 01-1 1h-4a1 1 0 01-1-1v-6z" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
							)}
							{item.icon === 'orders' && (
								<svg class="dashboard__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
									<path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
							)}
							{item.icon === 'products' && (
								<svg class="dashboard__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
									<path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
							)}
							{item.icon === 'customers' && (
								<svg class="dashboard__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
									<path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
							)}
							{item.icon === 'settings' && (
								<svg class="dashboard__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
									<path d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" stroke-linecap="round" stroke-linejoin="round"/>
									<path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
							)}
							<span>{item.label}</span>
						</a>
					))}
				</nav>

				<div class="dashboard__sidebar-footer">
					<a href="/" class="dashboard__nav-item admin__view-site">
						<svg class="dashboard__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
							<path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						<span>Ver Site</span>
					</a>
					<button class="dashboard__logout" id="admin-logout-btn">
						<svg class="dashboard__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
							<path d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						<span>Sair</span>
					</button>
				</div>
			</aside>

			<!-- Main Content -->
			<main class="dashboard__main admin__main">
				<slot />
			</main>
		</div>

		<script>
			document.getElementById('admin-logout-btn')?.addEventListener('click', async () => {
				try {
					await fetch('/api/admin/logout', { method: 'POST' });
					window.location.href = '/admin/entrar';
				} catch (error) {
					console.error('Logout failed:', error);
				}
			});
		</script>
	</body>
</html>
