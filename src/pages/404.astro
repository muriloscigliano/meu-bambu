---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Button from '../components/Button.astro';

const page = {
	title: '404 - Página não encontrada | Meu Bambu',
	description: 'A página que você está procurando não existe.',
};
---

<Base title={page.title} description={page.description} noIndex={true}>
	<Header />
	<section class="error-page">
		<div class="error-page__container">
			<h1 class="error-page__code">404</h1>
			<h2 class="error-page__title">Página não encontrada</h2>
			<p class="error-page__description">
				A página que você está procurando não existe ou foi movida.
			</p>
			<Button text="Voltar para a página inicial" href="/" theme="primary" />
		</div>
	</section>
</Base>

<style>
.error-page {
	min-height: 100vh;
	display: flex;
	align-items: center;
	justify-content: center;
	background: var(--color-bg-primary);
	padding-block: 120px 60px;
}

.error-page__container {
	max-width: 600px;
	margin-inline: auto;
	padding-inline: 2.25rem;
	text-align: center;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 24px;
}

.error-page__code {
	font-family: var(--font-display);
	font-weight: 900;
	font-style: italic;
	font-size: clamp(6rem, 15vw, 12rem);
	line-height: 0.9;
	color: var(--color-accent);
	margin: 0;
	text-transform: uppercase;
}

.error-page__title {
	font-family: var(--font-display);
	font-weight: 900;
	font-style: italic;
	font-size: clamp(2rem, 5vw, 3rem);
	line-height: 1.1;
	color: var(--color-text-secondary);
	margin: 0;
	text-transform: uppercase;
}

.error-page__description {
	font-family: var(--font-sans);
	font-weight: 400;
	font-size: 18px;
	line-height: 1.5;
	color: var(--color-text-primary);
	margin: 0;
	margin-bottom: 12px;
}

@media (max-width: 768px) {
	.error-page {
		padding-block: 100px 40px;
	}

	.error-page__description {
		font-size: 16px;
	}
}
</style>
