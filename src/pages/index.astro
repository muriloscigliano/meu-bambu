---

<Base title={page.title} description={page.description}>
	<Header />
	<Hero 
		title={hero.title}
		subtitle={hero.subtitle}
		ctaLabel={hero.ctaLabel}
		ctaHref={hero.ctaHref}
	/>
	<ProductPanels 
		title={productPanels.title}
		price={productPanels.price}
		description={productPanels.description}
		features={productPanels.features}
		ctaLabel={productPanels.ctaLabel}
		ctaHref={productPanels.ctaHref}
	/>
	<Marquee 
		items={['BAMBU SUSTENTÁVEL', 'DESIGN PREMIUM', 'NÚCLEO VERTICAL']}
		direction="left"
		speed={20}
		scrollSpeed={10}
		duplicate={3}
	/>
	<ProductSheets 
		title={productSheets.title}
		price={productSheets.price}
		description={productSheets.description}
		features={productSheets.features}
		ctaLabel={productSheets.ctaLabel}
		ctaHref={productSheets.ctaHref}
	/>
	<PerfectFor 
		eyebrow={perfectFor.eyebrow}
		title={perfectFor.title}
		description={perfectFor.description}
		ctaLabel={perfectFor.ctaLabel}
		ctaHref={perfectFor.ctaHref}
		useCases={perfectFor.useCases}
	/>
	<WhyChoose 
		title={whyChoose.title}
		description={whyChoose.description}
		features={whyChoose.features}
	/>
	<FooterCTA 
		title={footerCTA.title}
		ctaLabel={footerCTA.ctaLabel}
		ctaHref={footerCTA.ctaHref}
		description={footerCTA.description}
		cnpj={footerCTA.cnpj}
		address={footerCTA.address}
	/>
</Base>
